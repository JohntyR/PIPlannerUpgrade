<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <script src="https://togetherjs.com/togetherjs-min.js" defer></script>
    <script src="~/Scripts/script.js" defer></script>
</head>
<body class="dark">
    <div class="sidear-wrapper">
        <div class="flex-shrink-0 p-3 bg-dark aside-toolbar">
            <a href="/" class="d-flex align-items-center pb-3 mb-3 link-light text-decoration-none border-bottom">
                <i class="bi bi-calendar2-check-fill"></i>
                <span class="fs-5 fw-semibold ms-2">PI Planner</span>
            </a>

            <ul class="nav nav-pills flex-column mb-auto pb-3 border-bottom">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link active" aria-current="page">
                        <i class="bi bi-kanban-fill"></i>
                        Sprint Planner
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("About", "Home")" class="nav-link" aria-current="page">
                        <i class="bi bi-battery-full"></i>
                        Capacity Planner
                    </a>
                </li>
            </ul>

            <ul class="list-unstyled ps-0">
                <!----------- Cards --------------->
                <li class="mb-1 pb-3 border-bottom">
                    <button class="btn btn-toggle btn-white align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#cards-collapse" aria-expanded="true">
                        Cards
                    </button>
                    <div class="collapse show" id="cards-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small template-container">
                            <li>
                                <div class="toast show draggable text-white mt-2 mx-4 Dev-draggable" draggable="true">
                                    <div class="toast-header text-white bg-primary">
                                        <i class="bi bi-code-slash"></i>
                                        <strong class="me-auto ms-2">Dev</strong>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="toast show draggable text-white mt-2 mx-4 QA-draggable" draggable="true">
                                    <div class="toast-header text-white bg-success">
                                        <i class="bi bi-bug-fill"></i>
                                        <strong class="me-auto ms-2">QA</strong>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="toast show draggable text-white mt-2 mx-4 Dep-draggable" draggable="true">
                                    <div class="toast-header text-white bg-danger">
                                        <i class="bi bi-bezier2"></i>
                                        <strong class="me-auto ms-2">Dep</strong>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <!----------- Funcs --------------->
                <li class="mb-1 pb-3 border-bottom">
                    <button class="btn btn-toggle align-items-center rounded " data-bs-toggle="collapse" data-bs-target="#funcs-collapse" aria-expanded="true">
                        Funcs
                    </button>
                    <div class="collapse show" id="funcs-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li>
                                <div class="d-grid gap-2 mx-4">
                                    <button type="button" class="btn btn-outline-success btn-sm AddFeature">
                                        <i class="bi bi-plus-square-fill me-2"></i>
                                        Add Feature
                                    </button>
                                </div>
                            </li>
                            <li>
                                <div class="d-grid mx-4 mt-2">
                                    <button type="button" class="btn btn-outline-info btn-sm ReCalculate">
                                        <i class="bi bi-arrow-repeat me-2"></i>
                                        ReCalculate
                                    </button>
                                </div>
                            </li>
                            <li>
                                <div class="d-grid mx-4 mt-2">
                                    <button type="button" class="btn btn-outline-warning btn-sm ToggleLoadBreakdown" data-bs-toggle="collapse" data-bs-target="#sprint1-collapse, #sprint2-collapse, #sprint3-collapse, #sprint4-collapse, #sprint5-collapse, #sprint6-collapse" aria-expanded="false">
                                        <i class="bi bi-toggle-on me-2"></i>
                                        Toggle Load Breakdown
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <!----------- TogetherJS --------------->
                <li class="mb-1 pb-3 border-bottom">
                    <button class="btn btn-toggle align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#together-collapse" aria-expanded="true">
                        TogetherJS
                    </button>
                    <div class="collapse show" id="together-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li>
                                <div class="d-grid mx-4 mt-2">
                                    <button type="button" class="btn btn-warning btn-sm" onclick="TogetherJS(this); return false;">
                                        <i class="bi bi-share-fill me-2"></i>
                                        TogetherJS
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <main class="mb-2">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>    
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
